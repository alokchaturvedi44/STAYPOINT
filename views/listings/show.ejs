<% layout("./layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Listing Details </h3>
    </div>
    <div class="col-6 offset-2 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-image" alt="listing_image">
        <div class="card-body col-6">
            <p class="card-text">
                <b> <%= listing.title %> </b> <br>
                <%= listing.description %>  <br>
                &#8377; <%= new Intl.NumberFormat("en-IN").format(listing.price) %> / night  <br>
                <%= listing.location %>   <br>
                <%= listing.country %>  
            </p>
        </div>
        
        <br>
        
        <div class="d-flex justify-content-between">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn">Edit</a>
            
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark add-btn">Delete</button>
            </form>
        </div>
    </div>
</div>
